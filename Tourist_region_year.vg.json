{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "International visitors breakdown by regions (2011 - 2023)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/matthewCXZ/FIT3179_Assignment2/main/tourists_region_data.csv"
  },
  "mark": {
    "type": "bar",
    "size": 20  
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 0} 
    },
    "y": {
      "field": "Tourists",
      "type": "quantitative",
      "title": "Tourists"
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Region"
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Region", "type":"nominal"},
      {"field": "Tourists", "type": "quantitative", "title": "Tourists", "format": ","}
    ]
  }
}
